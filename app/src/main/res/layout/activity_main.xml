<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.practice.mayank.dashboard.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="240dp" 
                android:background="@drawable/sports"
                android:text="SPORTS DAY"
                android:textSize="30dp"
                android:textAlignment="center"
                android:gravity="bottom"
                android:textColor="@color/colorAccent"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">
                
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:background="@color/colorButtersweet">
                    
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_accessibility_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Archery"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:background="@color/colorbuttersweetdark"/>
                
                
                </LinearLayout>
                
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:background="@color/coloraqua">
                    
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp" 
                        android:layout_gravity="center"
                        android:src="@drawable/ic_child_friendly_black_24dp"
                        android:layout_marginTop="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" 
                        android:text="Skating"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:background="@color/coloraquadark"/>
                    
                    
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:background="@color/colorfolor"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_local_taxi_black_24dp"
                        android:layout_marginTop="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Formula 1"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:background="@color/colorfolordark"/>
                    
                </LinearLayout>
                
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:background="@color/colorGrapefruit">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_directions_bike_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cycling"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:background="@color/colorGrapefruitdark"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:background="@color/colorPrimary">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_rowing_black_24dp"
                        android:layout_marginTop="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Rowing"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:background="@color/colorPrimaryDark"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:background="@color/colorGrass"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_directions_run_black_24dp"
                        android:layout_marginTop="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Running"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:background="@color/colorGrassdark"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:background="@color/colorpinkrose">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:src="@drawable/ic_fitness_center_black_24dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Weight Lifting"
                        android:textSize="18dp"
                        android:textAlignment="center"
                        android:background="@color/colorpinkrosedark"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:orientation="vertical"
                    android:background="@color/colorlavendar">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_golf_course_black_24dp"
                        android:layout_marginTop="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Golf"
                        android:textAlignment="center"
                        android:textSize="25dp"
                        android:background="@color/colorlavendardark"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="1"
                    android:layout_margin="3dp"
                    android:background="@color/colormint"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_local_taxi_black_24dp"
                        android:layout_marginTop="30dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Moto Gp"
                        android:textSize="25dp"
                        android:textAlignment="center"
                        android:background="@color/colormintdark"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
    
    
    
    
    
    
    
    
</LinearLayout>
